@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Halloj</h1>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Director</th>
        <th scope="col">Year</th>
        <th scope="col">Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Title</td>
                <td>@item.Director</td>
            <td>@item.Year</td>
            <td>@item.GenreName</td>
            </tr>
    }
    </tbody>
</table>
